import java.util.Scanner;

public class WalkingFitnessTracker {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Welcome to the Walking Fitness Tracker!");

        // Get user input for number of steps
        System.out.print("Enter the number of steps walked: ");
        int steps = scanner.nextInt();

        // Get user input for step length
        System.out.print("Enter your average step length in meters: ");
        double stepLength = scanner.nextDouble();

        // Calculate distance based on steps and step length
        double distance = steps * stepLength;

        // Display the results
        System.out.println("\nFitness Tracker Results:");
        System.out.println("Steps walked: " + steps);
        System.out.println("Step length: " + stepLength + " meters");
        System.out.println("Distance covered: " + distance + " meters");

        scanner.close();
    }
}
